<div class="row">
	<div class="col-md-12">
		<div class="panel panel-primary">
			<div class="panel-body" style="overflow: auto;">
				<table class="table table-bordered table-striped table-hover">
					<thead>
						<th>
							Page Type
						</th>
						<th>
							URL
						</th>
						<th>Appender</th>
						<th>MMTest</th>
						<% @pixels_titles.each do |header| %>
							<th>
								<%= header %>
							</th>
						<% end %>
					</thead>
					<thead>
						<th></th>
						<th></th>
						<th></th>
						<th>Pixel Flags:</th>
						<% @pixel_flags.each do |pixel| %>
								<th><%= pixel %></th>
							<% end %>
					</thead>
					<% @urls.each_with_index do |url, urlindex| %>
						<tr>
							<td><%= @type[urlindex] %></td>
							<td><%= url %></td>
							<td><%= @appendstrings[urlindex] %></td>
							<td><%= @mmtest[urlindex].downcase.include?("y") ? 'yes' : 'no' %></td>
							<% @pixelstates[urlindex].each do |pixel| %>
								<td><%= pixel %></td>
							<% end %>
						</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>
<br />
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-primary">
			<%= form_tag("/pixels/import", method: "post") do %>
			    <div class="panel-heading">
			        <div class="panel-title">
			        	<label>Import Data from Spreadsheet</label>
			        </div>
			    </div>
			    <div class="panel-body" hidden="true">
			    	<input type="hidden" name="pixelsuite" value="<%= @pixelsuite.id %>">
			        <textarea  name="rawdata" class="form-control col-md-6"><%= params[:rawdata] %></textarea>
			    </div>
			    <br>
			    <div class="panel-footer">
			        <input name="commit" type="submit" value="Finalize Import" class="btn btn-success" />
			    </div>
		    <% end %>
		</div>
	</div>
</div>
