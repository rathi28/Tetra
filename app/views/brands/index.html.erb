<h1>Listing brands</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Brandname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.Brandname %></td>
        <td><%= link_to 'Show', brand, :class => 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Remove', brand, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

